<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/time2Chess"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Time2Chess"
        android:textAllCaps="false"

        android:background="@drawable/button_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chessdotcom"
        app:layout_constraintBottom_toTopOf="@id/ixl"/>

    <Button
        android:id="@+id/chessdotcom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAllCaps="false"
        android:text="Chess.Com"
        android:background="@drawable/button_default"
        app:layout_constraintStart_toEndOf="@+id/time2Chess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/testingmom" />

    <Button
        android:id="@+id/ixl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="IXL"
        android:background="@drawable/button_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/testingmom"
        app:layout_constraintTop_toBottomOf="@+id/time2Chess" />

    <Button
        android:id="@+id/testingmom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAllCaps="false"
        android:background="@drawable/button_default"
        android:text="Testing Mom"
        app:layout_constraintTop_toBottomOf="@id/chessdotcom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ixl"/>
</androidx.constraintlayout.widget.ConstraintLayout>